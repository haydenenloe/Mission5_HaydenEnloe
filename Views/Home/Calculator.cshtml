<h1>Calculator</h1>

<div>
    <label for="hours">Number of Hours:</label>
    <input type="number" id="hours" min="0" step="1">
</div>

<div>
    <label>Hourly Rate:</label>
    <input type="text" id="hourlyRate" value="$50" readonly>
</div>

<div>
    <button id="calculateButton">Calculate Total</button>
</div>

<div>
    <label>Total:</label>
    <span id="total"></span>
</div>
 
